<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HealthTracker.Styles.AllStyles"
>
    <Style x:Key="AppHeader" TargetType="StackLayout">
        <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryColor}" />
    </Style>
    <Style x:Key="AppContent" TargetType="StackLayout">
        <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryLightColor}" />
    </Style>
    <Style x:Key="AppFooter" TargetType="StackLayout">
        <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryColor}" />
    </Style>
</ResourceDictionary>