<?xml version="1.0" encoding="UTF-8"?>
<mvvm:ViewBase
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="clr-namespace:HealthTracker.MVVM"
    mc:Ignorable="d"
    x:Class="HealthTracker.MVVM.SectionMainView"
    x:Name="Self"
    d:DataContext="{d:DesignInstance mvvm:SectionMainViewModel, IsDesignTimeCreatable=False}"
>
    <ContentPage.Content>
        <StackLayout
            Margin="0"
            Padding="0"
            Spacing="0"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            Style="{DynamicResource AppContent}"
        >
            <StackLayout
                Margin="0"
                Padding="5, 0"
                Spacing="0"
                Orientation="Horizontal"
                HorizontalOptions="FillAndExpand"
                Style="{DynamicResource AppHeader}"
            >
                <Image
                    Margin="10"
                    HorizontalOptions="Start"
                    VerticalOptions="CenterAndExpand"
                    BindingContext="{Binding ActiveSection}"
                    Source="{Binding IconImageSource}"
                />
                <Label
                    BindingContext="{Binding ActiveSection}"
                    Text="{Binding DisplayName}"
                    Margin="10"
                    TextColor="{DynamicResource PrimaryTextColor}"
                    HorizontalOptions="StartAndExpand"
                    VerticalOptions="CenterAndExpand"
                    HorizontalTextAlignment="Start"
                    VerticalTextAlignment="Start"
                    FontSize="Title"
                    FontAttributes="Bold"
                />
                <Button
                    Margin="0"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    BackgroundColor="Transparent"
                    HorizontalOptions="End"
                    VerticalOptions="CenterAndExpand"
                    Command="{Binding OpenUserCommand}">
                    <Button.ImageSource>
                        <FontImageSource
                            Glyph="&#xf007;"
                            FontFamily="FontAwesomeSolid"
                            Color="{DynamicResource PrimaryTextColor}"
                            Size="Title"
                        />
                    </Button.ImageSource>
                </Button>
                <Button
                    Margin="0"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    BackgroundColor="Transparent"
                    HorizontalOptions="End"
                    VerticalOptions="CenterAndExpand"
                    Command="{Binding OpenSettingsCommand}">
                    <Button.ImageSource>
                        <FontImageSource
                            Glyph="&#xf013;"
                            FontFamily="FontAwesomeSolid"
                            Color="{DynamicResource PrimaryTextColor}"
                            Size="Title"
                        />
                    </Button.ImageSource>
                </Button>
            </StackLayout>
            <ContentView
                Margin="0"
                Padding="0"
                VerticalOptions="FillAndExpand"
                Content="{Binding SectionContent, Source={x:Reference Name=Self}}"
            />
            <StackLayout
                Margin="0"
                Padding="0"
                Spacing="0"
                Orientation="Horizontal"
                HorizontalOptions="FillAndExpand"
                Style="{DynamicResource AppFooter}"
                BindableLayout.ItemsSource="{Binding Sections}"
            >
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <StackLayout
                            Margin="0"
                            Padding="0"
                            Spacing="0"
                            HorizontalOptions="FillAndExpand"
                        >
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding NavigateToSectionCommand, Source={RelativeSource AncestorType={x:Type mvvm:SectionMainViewModel}}}"
                                    CommandParameter="{Binding Name}"
                                />
                            </StackLayout.GestureRecognizers>
                            <BoxView HeightRequest="6" BackgroundColor="Transparent">
                                <BoxView.Triggers>
                                    <DataTrigger TargetType="BoxView" Binding="{Binding Active}" Value="True">
                                        <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryTextColor}" />
                                    </DataTrigger>
                                </BoxView.Triggers>
                            </BoxView>
                            <Image Margin="0, 10, 0, 0" Source="{Binding IconImageSource}" />
                            <Label
                                Text="{Binding DisplayName}"
                                HorizontalOptions="FillAndExpand"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"
                                Margin="0, 0, 0, 10"
                                TextColor="{DynamicResource PrimaryTextColor}"
                            />
                        </StackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</mvvm:ViewBase>
